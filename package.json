{
	"name": "igicupuri",
	"version": "1.0.0",
	"description": "IGICUPURI Backend",
	"main": "dist/server.js",
	"engines": {
		"node": "16.x"
	},
	"scripts": {
		"start": "node dist/server.js",
		"dev": "ts-node-dev --transpile-only --no-notify --exit-child src/server.ts",
		"test": "npm run seed && tsc && nyc mocha",
		"build": "tsc",
		"lint": "eslint src",
		"prepare": "husky install"
	},
	"mocha": {
		"extension": [
			"ts"
		],
		"spec": "src/tests/**/*.spec.ts",
		"require": "ts-node/register",
		"exit": true,
		"timeout": 10000
	},
	"nyc": {
		"extends": "@istanbuljs/nyc-config-typescript",
		"reporter": [
			"text-summary",
			"lcov"
		],
		"all": "true",
		"exclude": [
			"dist",
			"coverage",
			"src/seeders"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Tsa2341/igicupuri.git"
	},
	"author": "Tsa",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Tsa2341/igicupuri/issues"
	},
	"homepage": "https://github.com/Tsa2341/igicupuri#readme",
	"dependencies": {
		"apollo-server": "^3.10.2",
		"apollo-server-express": "^3.10.2",
		"dotenv": "^16.0.2",
		"graphql": "^16.6.0",
		"joi": "^17.6.0",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^4.8.3"
	},
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^1.0.2",
		"@types/chai": "^4.3.3",
		"@types/mocha": "^9.1.1",
		"@types/node": "^18.7.16",
		"@typescript-eslint/eslint-plugin": "^5.36.2",
		"@typescript-eslint/parser": "^5.36.2",
		"chai": "^4.3.6",
		"eslint": "^8.23.0",
		"husky": "^8.0.1",
		"mocha": "^10.0.0",
		"nyc": "^15.1.0"
	}
}
